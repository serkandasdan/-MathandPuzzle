<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.serkan.matematikbulmaca.Main2Activity"
    android:background="@color/colorPrimary">

    <Button
        android:text="Kolay"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:id="@+id/btnkolay"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selectorbutton"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="buton (Main2Activity)" />

    <Button
        android:text="Orta"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:id="@+id/btnorta"
        android:layout_below="@+id/btnkolay"
        android:layout_alignLeft="@+id/btnkolay"
        android:layout_alignStart="@+id/btnkolay"
        android:background="@drawable/selectorbutton"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="buton (Main2Activity)" />

    <Button
        android:text="Zor"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/btnzor"
        android:layout_below="@+id/btnorta"
        android:layout_alignLeft="@+id/btnorta"
        android:layout_alignStart="@+id/btnorta"
        android:layout_marginTop="50dp"
        android:background="@drawable/selectorbutton"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:onClick="buton (Main2Activity)" />


</RelativeLayout>
