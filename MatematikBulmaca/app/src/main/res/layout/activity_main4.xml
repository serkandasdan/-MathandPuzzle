<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.serkan.matematikbulmaca.Main4Activity"
    android:background="@color/colorPrimary">

    <Button
        android:text=""
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="70dp"
        android:rotation="180"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:background="@drawable/oyunicigorsel"
        android:id="@+id/btn1ilk" />

    <Button
        android:text=""
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btn1orta"
        android:layout_alignBottom="@+id/btn1ilk"
        android:layout_marginTop="70dp"
        android:rotation="180"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:background="@drawable/oyunicigorsel"
        android:layout_centerHorizontal="true" />

    <Button
        android:text=""
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/btn1son"
        android:layout_alignBottom="@+id/btn1orta"
        android:layout_toRightOf="@+id/btn1orta"
        android:layout_toEndOf="@+id/btn1orta"
        android:rotation="180"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:background="@drawable/oyunicigorsel"
        android:layout_marginLeft="15dp" />
    <Button
        android:text=""
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/btn1soru"
        android:layout_marginTop="140dp"
        android:rotation="180"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="27sp"
        android:background="@drawable/oyunicigorsel"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/line"
        android:id="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text=""
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/btn2soru"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="27sp"
        android:layout_marginTop="280dp"
        android:background="@drawable/oyunicigorsel"
        android:layout_centerHorizontal="true" />


    <Button
        android:text=""
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/btn2orta"
        android:layout_alignBottom="@+id/btn2ilk"
        android:layout_alignLeft="@+id/btn1orta"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:background="@drawable/oyunicigorsel"
        android:layout_alignStart="@+id/btn1orta" />

    <Button
        android:text=""
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/btn2son"
        android:layout_alignBottom="@+id/btn2orta"
        android:layout_alignLeft="@+id/btn1son"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:background="@drawable/oyunicigorsel"
        android:layout_alignStart="@+id/btn1son" />

    <Button
        android:text=""
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:id="@+id/btn1puan"
        android:layout_alignParentTop="true"
        android:focusable="false"
        android:rotation="180"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/oyunicigorsel"
        android:enabled="false" />

    <Button
        android:text=""
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:id="@+id/btn2puan"
        android:layout_below="@+id/btn2orta"
        android:layout_alignLeft="@+id/btn1puan"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:focusable="false"
        android:background="@drawable/oyunicigorsel"
        android:layout_alignStart="@+id/btn1puan"
        android:enabled="false" />


    <Button
        android:text=""
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:id="@+id/btn2ilk"
        android:background="@drawable/oyunicigorsel"
        android:layout_marginBottom="70dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btn1ilk"
        android:layout_alignStart="@+id/btn1ilk" />

</RelativeLayout>
