<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.serkan.matematikbulmaca.Main3Activity"
    android:background="@color/colorPrimary">
<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:id="@+id/radioGroup">

    <RadioButton
        android:text="Toplama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/chtoplama"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:checked="true" />


    <RadioButton
        android:text="Çıkarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chcikarma"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/chtoplama"
        android:layout_alignLeft="@+id/chtoplama"
        android:layout_alignStart="@+id/chtoplama" />

    <RadioButton
        android:text="Çarpma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chcarpma"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/chcikarma"
        android:layout_alignLeft="@+id/chcikarma"
        android:layout_alignStart="@+id/chcikarma" />
    <RadioButton
        android:text="Bölme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chbolme"
        android:textSize="20sp"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/chcarpma"
        android:layout_alignLeft="@+id/chcikarma"
        android:layout_alignStart="@+id/chcikarma" />
</RadioGroup>


    <Button
        android:text="Başla"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textSize="25sp"
        android:id="@+id/btnbasla"
        android:layout_marginBottom="31dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/selectorbutton"
        android:shadowColor="#5FA816"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup" />


</RelativeLayout>
